@model IS4439_CA2.Models.ProjectComments

<h4>ProjectComments</h4>
<hr />
<div class="row justify-content-center mt-20">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProjectCommentsID" />
            <div class="form-group">
                <label asp-for="CommentText" class="control-label"></label>
                <input asp-for="CommentText" class="form-control" />
                <span asp-validation-for="CommentText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CommentTimeStamp" class="control-label"></label>
                <input asp-for="CommentTimeStamp" class="form-control" readonly />
                <span asp-validation-for="CommentTimeStamp" class="text-danger"></span>
            </div>
            <div class="form-group" >
                <label asp-for="ProjectID" class="control-label"></label>
                <input asp-for="ProjectID" type="text" class="form-control" readonly />
                <span asp-validation-for="ProjectID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

